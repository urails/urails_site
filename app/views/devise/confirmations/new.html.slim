h2 Resend confirmation instructions

= semantic_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, class: 'fullpage' }) do |f|
  = devise_error_messages!

  = f.inputs do
    = f.input :email, input_html: {autofocus: true}
  = f.actions do
    = f.action :submit, label: "Resend confirmation instructions"
= render "devise/shared/links"
